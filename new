#!/usr/bin/env bash
#------------------------------------------------------------------------------
# DevFlow·AI 新文章创建脚本
# 交互式创建新的博客文章
#------------------------------------------------------------------------------
set -euo pipefail

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# 执行创建脚本
exec "${SCRIPT_DIR}/scripts/new-post.sh" "$@"