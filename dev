#!/usr/bin/env bash
#------------------------------------------------------------------------------
# DevFlow·AI 本地开发启动脚本
# 一键启动 Hugo 开发服务器
#------------------------------------------------------------------------------
set -euo pipefail

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# 执行开发脚本
exec "${SCRIPT_DIR}/scripts/dev.sh" "$@"